<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_android"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                />

            <TextView
                android:id="@+id/changePhoto"
                android:layout_below="@id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Change Photo"/>

            <RelativeLayout
                android:id="@+id/relInputItem1"
                android:background="@drawable/grey_border_bottom"
                android:layout_marginTop="80dp"
                android:layout_below="@id/changePhoto"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_user_name"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="user name"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relInputItem2"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@id/relInputItem1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_display_name"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="display name"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relInputItem3"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@id/relInputItem2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_alert"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Website"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relInputItem4"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@id/relInputItem3"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_alert"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/privateInformation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/relInputItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE INFORMATION"
                android:textSize="25dp"
                android:background="@drawable/grey_border_bottom"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:id="@+id/relInputItem5"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@id/privateInformation"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_alert"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relInputItem6"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@id/relInputItem5"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/itemImage6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_alert"
                    />

                <EditText
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:background="@null"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</merge>